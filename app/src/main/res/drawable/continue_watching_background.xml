<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 获得焦点时的背景 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/tv_card_focused" />
            <corners android:radius="@dimen/tv_card_corner_radius" />
            <stroke
                android:width="2dp"
                android:color="@color/tv_accent" />
        </shape>
    </item>
    
    <!-- 默认背景 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/tv_card_background" />
            <corners android:radius="@dimen/tv_card_corner_radius" />
        </shape>
    </item>
    
</selector>
