<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a">

    <!-- 背景海报（模糊） -->
    <ImageView
        android:id="@+id/background_poster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- 顶部信息区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 左侧：剧集缩略图 -->
                <ImageView
                    android:id="@+id/episode_thumbnail"
                    android:layout_width="320dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_card" />

                <!-- 右侧：剧集信息 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="24dp"
                    android:orientation="vertical">

                    <!-- 电视剧名 第X季·第X集 -->
                    <TextView
                        android:id="@+id/episode_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#888888"
                        android:textSize="16sp" />

                    <!-- 剧集标题 -->
                    <TextView
                        android:id="@+id/episode_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="#ffffff"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <!-- 播放按钮 -->
                    <TextView
                        android:id="@+id/play_button"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rating_badge_background"
                        android:gravity="center"
                        android:paddingHorizontal="32dp"
                        android:text="▶ 播放"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                    <!-- 元信息行：年份 · 时长 -->
                    <TextView
                        android:id="@+id/episode_meta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="#aaaaaa"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <!-- 简介 -->
            <TextView
                android:id="@+id/episode_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:lineSpacingExtra="4dp"
                android:textColor="#cccccc"
                android:textSize="15sp" />

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="#333333" />

            <!-- 文件信息区域 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="文件信息"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/file_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <!-- 文件位置 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="文件位置"
                        android:textColor="#888888"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/file_path"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#cccccc"
                        android:textSize="14sp"
                        android:ellipsize="middle"
                        android:singleLine="true" />
                </LinearLayout>

                <!-- 文件大小 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="文件大小"
                        android:textColor="#888888"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/file_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#cccccc"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 创建日期 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="创建日期"
                        android:textColor="#888888"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/file_created"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#cccccc"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 添加日期 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="添加日期"
                        android:textColor="#888888"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/file_added"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#cccccc"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="#333333" />

            <!-- 视频技术信息区域 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="视频信息"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/stream_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <!-- 视频 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="视频"
                        android:textColor="#888888"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/video_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#cccccc"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 音频 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="音频"
                        android:textColor="#888888"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/audio_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#cccccc"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- 字幕 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="字幕"
                        android:textColor="#888888"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/subtitle_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#cccccc"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 底部间距 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="48dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
